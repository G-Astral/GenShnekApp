        <Image Name="ImgTable" Source="ThreadTable.png" HorizontalAlignment="Left" Height="265" Margin="44,25,0,0" VerticalAlignment="Top" Width="489"/>
        <TextBlock Margin="559,25,41,157" FontSize="20">
            <Run Text="Для пользовательских резьб"/>
            <Run Text=" параметры"/><LineBreak/>
            <Run Text="расчитываются следующим образом:"/><LineBreak/>
            <Run Text="1) P1 = P2 = P/2;"/><LineBreak/>
            <Run Text="2) d = d';"/><LineBreak/>
            <Run Text="3) d0 = d0';"/><LineBreak/>
            <Run Text="4) d0 = d*0.87."/><LineBreak/>
