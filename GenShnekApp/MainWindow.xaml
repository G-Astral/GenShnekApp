                    <TextBox 
                        x:Name="inputShnekThick"
                        TextAlignment="Left"
                        PreviewTextInput="TextBoxInput"
                        VerticalContentAlignment="Center"
                        PreviewKeyDown="DeleteSpaces"
                        Text="2"
                        Height="25" Width="200" Margin="263,394,737,281"/>
